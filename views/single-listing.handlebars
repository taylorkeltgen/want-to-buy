<div class="row justify-content-center align-items-center pt-5">
  <div class="card" style="width: 20rem;">
    <img class="card-img-top" src="{{listing.category.image_id}}" alt="Listing image">
    <div class="card-body">
      <h5 class="card-title">{{listing.item}}</h5>
      <h6 class="card-title">Category: {{listing.category.label}}</h6>
      <h6 class="card-title">Price: ${{listing.price}}</h6>
      <p class="card-text">{{listing.description}}</p>
      <a href="mailto: {{listing.user.email}}" class="btn btn-primary">Contact buyer</a>
    </div>
  </div>
</div>